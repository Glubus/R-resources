<?xml version="1.0" encoding="utf-8"?>
<resources>
    <doc>Application name displayed to users</doc>
    <string name="app_name">r-resources</string>
    <number name="max_retries">3</number>
    <number name="timeout_ms">5000</number>
    <number name="rate">0.75</number>
    <number name="tax_rate">0.20</number>
    <bool name="debug_mode">true</bool>

    <ns name="auth">
        <string name="title">Login</string>
        <ns name="error">
            <string name="credentials">Invalid credentials</string>
        </ns>
    </ns>

    <number name="auto_number">123456</number>
    <number name="auto_number_with_decimal">123456.789</number>
    <number name="big_number" type="bigdecimal">1234567890123456789012345678901234567890</number>
    <number name="auto_big_number">12345678901234567890123456789012345678901234567890123456789012345678901234567890</number>
    <number name="auto_big_decimal">31212120129092108928901289001982890120988902190812098.218128128191289012077198209812908</number>


    <template name="welcome_message">
        <string name="name"/>
        <number name="count" type="bigdecimal"/>
        Welcome to {name}, you have {count} messages!
    </template>

    <array name="numbers_bigdecimal" type="number" spec="bigdecimal">
        <item>1</item>
        <item>2</item>
        <item>3</item>
    </array>

    <array name="numbers_i64" type="number">
        <item>1245678901230</item>
        <item>9865436543210</item>
        <item>1389012345678</item>
    </array>

    <array name="strings" type="string">
        <item>Hello</item>
        <item>World</item>
    </array>

    <array name="bools" type="bool">
        <item>true</item>
        <item>false</item>
    </array>

    <array name="colors" type="color">
        <item>#FF0000</item>
        <item>#00FF00</item>
    </array>
</resources>
